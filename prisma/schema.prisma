datasource db {
  provider = "mongodb"
  url      = env("MONGO_URI")
}

generator client {
  provider = "prisma-client-js"
}

model RssFeed {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  link      String     @unique
  content   String
  image     String?
  createdAt DateTime   @default(now())
}


model User {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  email String
  Hashedpassword String
}

model LineItem {
  id           String   @id @map("_id") @default(auto()) @db.ObjectId
  size         String
  minCpm       Float
  maxCpm       Float
  geo          String
  adType       String
  frequencyCap Int
  creativeUrl  String
  createdAt    DateTime @default(now())
}
